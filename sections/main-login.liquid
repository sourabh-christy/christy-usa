{%- style -%}
  #shopify-section-{{ section.id }} #recover,#shopify-section-{{ section.id }} #recover+div { display: none }
  #shopify-section-{{ section.id }} #recover:target,#shopify-section-{{ section.id }} #recover:target+div { display: block }
  #shopify-section-{{ section.id }} #recover:target~#login,#shopify-section-{{ section.id }} #recover:target~#login+div { display: none }
{%- endstyle -%}

<div class="customer login section-{{ section.id }}-padding container py-[45px] md:py-[var(--header-height)] lg:py-[var(--header-height-lg)]">
  <div class=" mx-auto space-y-4 lg:space-y-6">
    <h1 id="recover" class="m-h1 lg:d-h1 outline-none" tabindex="-1">
      <span class="grid md:grid-cols-12">
        <span class="md:col-start-2 md:col-span-10">{{ 'customer.recover_password.title' | t }}</span>
      </span>
    </h1>

    <div>
      <div class="grid md:grid-cols-12">
        <div class="md:col-span-5 md:col-start-2 space-y-4 lg:space-y-6">
          <p>
            {{ 'customer.recover_password.subtext' | t }}
          </p>

          {%- form 'recover_customer_password' -%}
            {% assign recover_success = form.posted_successfully? %}
            <div class="space-y-4 lg:space-y-6">
              <div class="field field-large">
                <input
                  type="email"
                  value=""
                  name="email"
                  id="RecoverEmail"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    aria-invalid="true"
                    aria-describedby="RecoverEmail-email-error"
                    autofocus
                  {% endif %}
                  placeholder="{{ 'customer.login_page.email' | t }}"
                >
                <label for="RecoverEmail">
                  {{ 'customer.login_page.email' | t }}
                </label>
              </div>
              {%- if form.errors -%}
                <small id="RecoverEmail-email-error" class="form__message form__message--float">
                  <svg aria-hidden="true" focusable="false" viewBox="0 0 13 13">
                    <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                    <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                    <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                    <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                  </svg>
                  {{ form.errors.messages.form }}
                </small>
              {%- endif -%}

              <div class="space-y-5 lg:space-y-8 flex flex-col items-start">
                <button class="btn-large btn-primary  md:max-w-[200px]">
                  {{ 'customer.login_page.submit' | t }}
                </button>

                <a class="btn-tertiary" href="#login">
                  {{ 'customer.login_page.cancel' | t }}
                </a>
              </div>
            </div>
          {%- endform -%}
        </div>
      </div>
    </div>

    <h1 id="login" class="m-h1 lg:d-h1 outline-none grid md:grid-cols-12 !mt-0" tabindex="-1">
      <span class="md:col-start-2 md:col-span-10">Account Login</span>
    </h1>

    <div class="grid md:grid-cols-12 max-md:gap-y-12 md:gap-x-12">
      <div class="md:col-span-5 md:col-start-2 md:row-start-2 [&_.ssw-social-login-widget]:!mb-0">
        {%- if recover_success == true -%}
          <h3 class="form__message  form__message--float" tabindex="-1" autofocus>
            <svg aria-hidden="true" focusable="false" viewBox="0 0 13 13">
              <path d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z" fill="#428445" stroke="white" stroke-width="0.7"/>
              <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white"/>
              <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white">
            </svg>
            {{ 'customer.recover_password.success' | t }}
          </h3>
        {%- endif -%}
        {%- form 'customer_login', novalidate: 'novalidate' -%}
          <div class="space-y-4 lg:space-y-6">
            {%- if form.errors -%}
              <div>
                <h2 class="form__message  form__message--float" tabindex="-1">
                  <span class="visually-hidden">{{ 'accessibility.error' | t }} </span>
                  <svg
                    class=""
                    aria-hidden="true"
                    focusable="false"
                    viewBox="0 0 13 13"
                  >
                    <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                    <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                    <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                    <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                  </svg>
                  {{ 'templates.contact.form.error_heading' | t }}
                </h2>
                {{ form.errors | default_errors }}
              </div>
            {%- endif -%}

            <div class="field field-large">
              <input
                type="email"
                name="customer[email]"
                id="CustomerEmail"
                autocomplete="email"
                autocorrect="off"
                autocapitalize="off"
                {% if form.errors contains 'form' %}
                  aria-invalid="true"
                {% endif %}
                placeholder="{{ 'customer.login_page.email' | t }}"
              >
              <label for="CustomerEmail">
                {{ 'customer.login_page.email' | t }}
              </label>
            </div>

            {%- if form.password_needed -%}
              <div class="field field-large">
                <input
                  type="password"
                  value=""
                  name="customer[password]"
                  id="CustomerPassword"
                  autocomplete="current-password"
                  {% if form.errors contains 'form' %}
                    aria-invalid="true"
                  {% endif %}
                  placeholder="{{ 'customer.login_page.password' | t }}"
                >
                <label for="CustomerPassword">
                  {{ 'customer.login_page.password' | t }}
                </label>
              </div>

              <a class="inline-block btn-tertiary" href="#recover">
                {{ 'customer.login_page.forgot_password' | t }}
              </a>
            {%- endif -%}

            <div class="space-y-5 lg:space-y-8 flex flex-col items-start !mt-6 lg:!mt-12">
              <button class="btn-large btn-primary md:max-w-[200px]">
                {{ 'customer.login_page.sign_in' | t }}
              </button>
            </div>
          </div>
        {%- endform -%}
      </div>

      <div class="md:col-span-4 md:col-start-8 md:row-start-2">
        <div class="space-y-6 lg:space-y-12">
          <div class="wysiwyg">
            {{ settings.create_account_copy }}
          </div>

          <a class="btn-large btn-secondary md:max-w-[200px]" href="{{ routes.account_register_url }}">
            {{ 'customer.login_page.create_account' | t }}
          </a>
        </div>
      </div>
    </div>

    {%- if shop.checkout.guest_login -%}
      <div>
        <hr>
        <h2>{{ 'customer.login_page.guest_title' | t }}</h2>

        {%- form 'guest_login' -%}
          <button>
            {{ 'customer.login_page.guest_continue' | t }}
          </button>
        {%- endform -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-login.name",
  "settings": []
}
{% endschema %}
