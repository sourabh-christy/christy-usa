<section>
  <div class="container container-sm pt-12 md:pb-8 pb-0 ">
    <div class="grid grid-cols-1 md:grid-cols-3 xl:grid-cols-4 gap-y-0 gap-x-6 md:gap-x-6 md:gap-y-6 lg:gap-x-12 lg:gap-y-12 ">
      <ul class="xl:max-w-[252px] flex xl:flex-col xl:mt-[92px] xl:justify-start justify-center gap-6 max-xl:gap-x-[38px]  md:row-start-1 md:row-end-2 md:col-start-1 md:col-end-4 xl:row-start-1 xl:row-end-2 xl:col-start-1 xl:col-end-2 mb-4 md:mb-0">
        {%- if settings.social_instagram_link != blank -%}
          <li>
            <a
              href="{{ settings.social_instagram_link }}"
              class="grid grid-cols-[24px_1fr] grid-rows-[1fr] xl:gap-x-[13px] gap-y-0 items-center"
              target="_blank"
            >
              {%- render 'icon-instagram' -%}
              <span class="font-semibold text-xs tracking-tighter hidden xl:block">
                {{- 'general.social.links.instagram' | t -}}
              </span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_facebook_link != blank -%}
          <li>
            <a
              href="{{ settings.social_facebook_link }}"
              class="grid grid-cols-[24px_1fr] grid-rows-[1fr] xl:gap-x-[13px] gap-y-0 items-center"
              target="_blank"
            >
              {%- render 'icon-facebook' -%}
              <span class="font-semibold text-xs tracking-tighter hidden xl:block">
                {{- 'general.social.links.facebook' | t -}}
              </span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_twitter_link != blank -%}
          <li>
            <a
              href="{{ settings.social_twitter_link }}"
              class="grid grid-cols-[24px_1fr] grid-rows-[1fr] xl:gap-x-[13px] gap-y-0 items-center"
              target="_blank"
            >
              {%- render 'icon-twitter' -%}
              <span class="font-semibold text-xs tracking-tighter hidden xl:block">
                {{- 'general.social.links.twitter' | t -}}
              </span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_youtube_link != blank -%}
          <li>
            <a
              href="{{ settings.social_youtube_link }}"
              class="grid grid-cols-[24px_1fr] grid-rows-[1fr] xl:gap-x-[13px] gap-y-0 items-center"
              target="_blank"
            >
              {%- render 'icon-youtube' -%}
              <span class="font-semibold text-xs tracking-tighter hidden xl:block">
                {{- 'general.social.links.youtube' | t -}}
              </span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_pinterest_link != blank -%}
          <li>
            <a
              href="{{ settings.social_pinterest_link }}"
              class="grid grid-cols-[24px_1fr] grid-rows-[1fr] xl:gap-x-[13px] gap-y-0 items-center"
              target="_blank"
            >
              {%- render 'icon-pinterest' -%}
              <span class="font-semibold text-xs tracking-tighter hidden xl:block">
                {{- 'general.social.links.pinterest' | t -}}
              </span>
            </a>
          </li>
        {%- endif -%}
      </ul>
      {%- for block in section.blocks -%}
        {%- if block.type == 'link_list' -%}
          {%- assign menu = block.settings.footer_links -%}
          {%- assign links = linklists[menu].links -%}
          {%- if links != blank -%}
            <div class="lg:max-w-[252px] dropdown-component mob-only overflow-hidden border-b md:border-b-0 border-secondary-blue-50">
              {%- if block.settings.title != blank -%}
                <li class="title grid grid-cols-[1fr_auto] grid-rows-[1fr] gap-x-[13px] gap-y-0 items-center md:[&>svg]:hidden text-[16px] md:text-xl font-semibold md:font-normal md:font-sec pt-6 pb-6 md:pt-2 md:pb-2 md:border-b border-secondary-blue-50">
                  {{- block.settings.title -}}
                  {%- render 'icon-arrow' -%}
                </li>
              {%- else -%}
                <li class="title grid grid-cols-[1fr_auto] grid-rows-[1fr] gap-x-[13px] gap-y-0 items-center md:[&>svg]:hidden text-[16px] md:text-xl font-semibold md:font-normal md:font-sec pt-6 pb-6 md:pt-2 md:pb-2 md:border-b border-secondary-blue-50">
                  {{- block.settings.footer_links.title -}}
                  {%- render 'icon-arrow' -%}
                </li>
              {%- endif -%}
              <div class="content content-max-height content-padding-s transition-all md:mt-[23px]  duration-300">
                <ul class="pb-6 pt-3 grid grid-cols-2 md:grid-cols-1">
                  {%- for link in links -%}
                    <li class="text-sm mt-[9px] mb-[9px]">
                      <a class="animated-underline font-normal" href="{{link.url}}">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            </div>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{%- schema %}
{
  "name": "t:sections.footer.name",
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "link_list",
      "name": "Footer Links",
      "settings": [
        {
          "type": "text",
          "id": "footer_title",
          "label": "Footer Title"
        },
        {
          "type": "link_list",
          "id": "footer_links",
          "label": "Footer Links",
          "info": "Add links to your footer"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      }
    ]
  }
}
{% endschema -%}
