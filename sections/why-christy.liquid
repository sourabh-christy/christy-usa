<div class="py-12 lg:py-24 bg-[#DBD4CC]/10">
  <div class="container space-y-8 lg:space-y-16">
    <header class="flex gap-12 max-md:flex-col items-start md:items-center">
      {% if section.settings.title %}
        <h2 class="s-m-h2 lg:s-d-h1">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.button_title and section.settings.button_link %}
        <a class="btn-secondary btn-medium" href="{{ section.settings.button_link }}">
          {{- section.settings.button_title -}}
        </a>
      {% endif %}
    </header>

    <div class="max-md:py-3 grid md:gap-6 md:grid-cols-3 animation an-fadeup bg-blue-1/10">
      {%- for block in section.blocks -%}
        <div
          {{ block.shopify_attributes }}
          class="flex-1 relative group select-none md:flex overflow-hidden max-md:space-y-5"
        >
          <div class="space-y-3 lg:space-y-5 flex-1 flex-col flex items-start justify-start py-3 md:py-7 px-7">
            {% if block.settings.title %}
              <h4 class="max-lg:font-semibold lg:d-h5 blocktitle">{{ block.settings.title }}</h4>
            {% endif %}
            <div class="wysiwyg">{{ block.settings.text }}</div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% if section.settings.margin == 'no' %}
  <style>
    #shopify-section-{{ section.id }} {
        margin: 0 !important;
    }
  </style>
{% endif %}
{% style %}
{%- if section.settings.why_christy_title_font_size_mob != blank -%}
  #shopify-section-{{ section.id }} .s-m-h2 {
    font-size: {{ section.settings.why_christy_title_font_size_mob }}px;
  }
  {%- endif -%}

  {%- if section.settings.why_christy_title_font_weight != blank -%}
  #shopify-section-{{ section.id }} .s-m-h2 {
    font-weight: {{ section.settings.why_christy_title_font_weight }};
  }
  {%- endif -%}

  {%- if section.settings.why_christy_title_font_family != blank -%}
  #shopify-section-{{ section.id }} .s-m-h2 {
    font-family: 
      {%- if section.settings.why_christy_title_font_family == 'serif' -%}
        serif
      {%- elsif section.settings.why_christy_title_font_family == 'sans-serif' -%}
        sans-serif
      {%- else -%}
        "Hatton", serif
      {%- endif -%};
  }
  {%- endif -%}

  {%- if section.settings.why_christy_block_title_font_size_mob != blank -%}
  #shopify-section-{{ section.id }} .blocktitle{
    font-size: {{ section.settings.why_christy_block_title_font_size_mob }}px;
  }
  {%- endif -%}

  {%- if section.settings.why_christy_block_title_font_weight != blank -%}
  #shopify-section-{{ section.id }} .blocktitle {
    font-weight: {{ section.settings.why_christy_block_title_font_weight }};
  }
  {%- endif -%}

  {%- if section.settings.why_christy_block_title_font_family != blank -%}
  #shopify-section-{{ section.id }} .blocktitle {
    font-family: 
      {%- if section.settings.why_christy_block_title_font_family == 'serif' -%}
        serif
      {%- elsif section.settings.why_christy_block_title_font_family == 'sans-serif' -%}
        sans-serif
      {%- else -%}
        "Hatton", serif
      {%- endif -%};
  }
  {%- endif -%}

  {% if section.settings.screen_visibility == 'mobile' %}
    @media all and (min-width: 768px ) {
        #shopify-section-{{ section.id }} {
            display: none !important;
        }
    }  
  {% endif %}

  {% if section.settings.screen_visibility == 'desktop' %}
    @media all and (max-width: 767px ) {
        #shopify-section-{{ section.id }} {
            display: none !important;
        }  
    }
  {% endif %}

  {%- if section.settings.why_christy_title_font_size_desktop != blank -%}
  @media all and (min-width: 1024px) {
    #shopify-section-{{ section.id }} .s-m-h2 {
      font-size: {{ section.settings.why_christy_title_font_size_desktop }}px;
    }
  }
  {%- endif -%}
  {%- if section.settings.why_christy_block_title_font_size_desktop != blank -%}
  @media all and (min-width: 1024px) {
    #shopify-section-{{ section.id }} .blocktitle{
      font-size: {{ section.settings.why_christy_block_title_font_size_desktop }}px;
    }
  }
  {%- endif -%}
{% endstyle %}

