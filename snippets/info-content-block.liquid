
<div class="product-card group/card info-content-block col-span-1  qt-info-content-block ">
 
  <div
    class="space-y-4 h-full"
    
  >
    <div
      class="card__inner relative h-full flex flex-col gap-4 items-center justify-center qt-card-shop-now"
    >
     
      {% comment %}QT 8-5-2024{% endcomment %}
      <style>
        .qt-info-content-block{
          /*width:442px;*/
          height:100%;
        }
    
        .text-xl{
          font-size:1.25rem;
          line-height:1.75rem
        }
        
        .text-4xl{font-size:2.25rem;line-height:2.5rem}

        .qt-info-content-block-img{
          filter: brightness(50%);
        }
        @media (max-width: 768px) {
          .qt-card-shop-now {
            padding: 20px 0px 25px;
          }
          .qt-info-content-block{
            /*width:334px;*/
            grid-column: span 2;
          }
        }
      </style>
      
      {%- if block.background_image -%}
        <a href="{{ block.button_link }}" class="block relative w-full h-full">
        {% comment %} {{
          block.background_image
          | image_url: width: 500 
          | image_tag:
            alt: 'Gallery Image',
            class: 'w-full h-full object-cover left-0 top-0 -z-10 absolute brightness-50 qt-info-content-block-img',
           
            srcset: null
        }} {% endcomment %}
        <img
          srcset="
            {%- if block.background_image.width >= 165 -%}{{ block.background_image | image_url: width: 165 }} 165w,{%- endif -%}
            {%- if block.background_image.width >= 330 -%}{{ block.background_image | image_url: width: 330 }} 330w,{%- endif -%}
            {%- if block.background_image.width >= 535 -%}{{ block.background_image | image_url: width: 535 }} 535w,{%- endif -%}
            {%- if block.background_image.width >= 750 -%}{{ block.background_image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if block.background_image.width >= 1000 -%}{{ block.background_image | image_url: width: 1000 }} 1000w,{%- endif -%}
            {%- if block.background_image.width >= 1500 -%}{{ block.background_image | image_url: width: 1500 }} 1500w,{%- endif -%}
            {%- if block.background_image.width >= 3000 -%}{{ block.background_image | image_url: width: 3000 }} 3000w,{%- endif -%}
            {{ block.background_image | image_url }} {{ block.background_image.width }}w
          "
          src="{{ block.background_image | image_url: width: 1500 }}"
          sizes="
            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: columns }}px,
            (min-width: 750px) {% if columns > 1 %}calc((100vw - 10rem) / 2){% else %}calc(100vw - 10rem){% endif %},
            calc(100vw - 3rem)
          "
          alt=""
          height="{{ block.background_image.height }}"
          width="{{ block.background_image.width }}"
          loading="lazy"
          class="motion-reduce w-full h-full left-0 top-0 -z-10  {% if block.overlay == true %}qt-info-content-block-img {% endif %}"
        />
      
        <div class="absolute z-0 flex flex-col items-center justify-center px-8 gap-6 text-white text-center">
          <p class="text-xl">{{ block.short_title }}</p>
          <p class="text-4xl">{{ block.long_title }}</p>
          <p>{{ block.description | metafield_tag }}</p>
          {% if block.button_text and block.button_text != '' %}
            <a href="{{ block.button_link }}" class="px-4 py-2 bg-white text-blue-1">{{ block.button_text }}</a>
          {% endif %}
        </div>
      </a>
      {% endif %}
    </div>
  </div>
</div>
